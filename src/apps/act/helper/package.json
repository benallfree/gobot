{
  "name": "gobot-act",
  "version": "0.2.60",
  "description": "Act helper for Gobot",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prepack": "rimraf -v --glob \"gobot-*\" pb_data",
    "dev": "node ./src/cli.js",
    "test": "npm pack && npm rm -g gobot-act && npm i -g gobot-act-`cat package.json | fx '.version'`.tgz && act --g-refresh --g-vvv --help",
    "build": "npm run clean && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm"
  },
  "bin": {
    "act": "./dist/cli.js"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/benallfree/gobot/tree/main/src/apps/act/helper"
  },
  "keywords": [
    "gobot",
    "act"
  ],
  "author": "Ben Allfree",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benallfree/gobot/issues"
  },
  "homepage": "https://github.com/benallfree/gobot/tree/main/src/apps/act/helper/readme.md",
  "dependencies": {
    "commander": "^12.0"
  },
  "peerDependencies": {
    "gobot": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  }
}
