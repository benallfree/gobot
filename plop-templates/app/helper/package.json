{
  "name": "gobot-{{lowerCase slug}}",
  "version": "{{version}}{{#if isAlpha}}-alpha.17{{/if}}",
  "description": "{{name}} helper for Gobot",
  "type": "module",
  "main": "dist/api.js",
  "scripts": {
    "clean": "rimraf dist",
    "prepack": "rimraf -v --glob \"gobot-*\" pb_data",
    "dev": "tsx ./src/cli.ts",
    "test": "npm pack && npm rm -g gobot-{{lowerCase slug}} && npm i -g gobot-{{lowerCase slug}}-{{version}}.tgz && {{slug}} --g-refresh --g-vvv --help",
    "build": "npm run clean && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm"
  },
  "bin": {
    "{{slug}}": "./dist/cli.js"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/benallfree/gobot/tree/main/src/apps/{{slug}}/helper"
  },
  "keywords": [
    "gobot",
    "{{slug}}",
    "{{name}}"
  ],
  "author": "Ben Allfree",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benallfree/gobot/issues"
  },
  "homepage": "https://www.npmjs.com/package/gobot-{{lowerCase slug}}",
  "dependencies": {
    "gobot": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  }
}
