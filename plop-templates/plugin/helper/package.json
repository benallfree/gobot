{
  "name": "gobot-{{name}}",
  "version": "{{version}}",
  "description": "{{slug}} helper for Gobot",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prepack": "rimraf -v --glob \"gobot-*\" pb_data",
    "dev": "node ./src/cli.js",
    "test": "npm pack && npm rm -g gobot-{{name}} && npm i -g gobot-{{name}}-`cat package.json | fx '.version'`.tgz && {{name}} --g-refresh --g-vvv --help",
    "build": "npm run clean && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm"
  },
  "bin": {
    "{{name}}": "./dist/cli.js"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/benallfree/gobot/tree/{{branch}}/src/apps/{{name}}/helper"
  },
  "keywords": [
    "gobot",
    "{{name}}"
  ],
  "author": "Ben Allfree",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benallfree/gobot/issues"
  },
  "homepage": "https://github.com/benallfree/gobot/tree/{{branch}}/src/apps/{{name}}/helper/readme.md",
  "dependencies": {
    "commander": "^12.0"
  },
  "peerDependencies": {
    "gobot": "*"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  }
}
