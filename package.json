{
  "name": "gobot",
  "version": "1.0.0-alpha.20",
  "description": "Install and run most any binary app as an npm package dependency.",
  "repository": "github:benallfree/gobot",
  "type": "module",
  "main": "./dist/api.js",
  "bin": {
    "gobot": "./dist/cli.js"
  },
  "types": "dist/api.d.ts",
  "scripts": {
    "prepack": "rimraf -v --glob \"gobot-*.tgz\" pb_data",
    "pack": "npm pack",
    "bump": "npm version prerelease --no-git-tag-version --preid alpha",
    "clean": "rimraf dist",
    "plop": "pnpm plop:transpile && plop",
    "plop:transpile": "tsup-node ./plopfile.ts --format esm --out-dir .",
    "build": "npm run clean && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm",
    "watch": "tsup-node --watch .",
    "dev": "node dist/cli.js",
    "test": "pnpm build && npm pack && npm rm -g gobot && npm i -g gobot-`cat package.json | fx '.version'`.tgz && gobot pocketbase --g-refresh --g-vvv --help",
    "docs": "typedoc"
  },
  "keywords": [
    "pocketbase",
    "pockethost"
  ],
  "author": {
    "name": "Ben Allfree",
    "url": "https://github.com/benallfree"
  },
  "license": "ISC",
  "dependencies": {
    "@s-libs/micro-dash": "^17.1.0",
    "@xhmikosr/decompress-targz": "^7.0.0",
    "@xhmikosr/decompress-unzip": "^6.0.0",
    "bottleneck": "^2.19.5",
    "commander": "^12.0.0",
    "decompress": "^4.2.1",
    "env-paths": "^3.0.0",
    "json-stringify-safe": "^5.0.1",
    "node-fetch": "^3.3.2",
    "readdirp": "^3.6.0",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/decompress": "^4.2.7",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "boolean": "^3.2.0",
    "fx": "^31.0.0",
    "glob": "^10.3.10",
    "markdown-table": "^3.0.3",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "sharp": "^0.33.2",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.9",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3",
    "verdaccio": "^5.29.2",
    "yaml": "^2.4.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "plop@4.0.1": "patches/plop@4.0.1.patch",
      "node-plop@0.32.0": "patches/node-plop@0.32.0.patch"
    }
  }
}
